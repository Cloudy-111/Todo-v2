<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoDefaultButtonStyle" parent="">
        <item name="android:background">@null</item>
    </style>

    <style name="MyButton.Fill" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="MyButton.NoFill" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerSize">10dp</item>
    </style>
</resources>