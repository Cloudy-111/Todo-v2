<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp"
    android:layout_marginBottom="70dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".fragments.HomeFragment">


    <FrameLayout
        android:id="@+id/frameLayout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/background_circle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/magnifer"/>
            <EditText
                android:id="@+id/search_global"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:hint="Search Global"
                android:textColorHint="@color/tertiary"/>
        </LinearLayout>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:paddingBottom="90dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout_search" />
</androidx.constraintlayout.widget.ConstraintLayout>