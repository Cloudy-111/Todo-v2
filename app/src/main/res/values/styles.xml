<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavTextActive" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_nav_selector</item>
        <item name="fontFamily">@font/sf_compact_rounded_bold</item>
    </style>
    <style name="BottomNavTextInactive" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_nav_selector</item>
        <item name="fontFamily">@font/sf_compact_rounded</item>
    </style>
    <style name="SFCompactRoundedStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/sf_compact_rounded</item>
    </style>

    <style name="CustomColorPickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#FFFFFF</item> <!-- Nền trắng -->
        <item name="android:textColor">#000000</item> <!-- Màu chữ đen -->
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="WrapScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowMinWidthMajor">100%</item>
    </style>

    <style name="CircleImage" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>
</resources>